{
    "app-id": "org.parlatype.Parlatype",

    "runtime": "org.gnome.Platform",
    "runtime-version": "40",
    "sdk": "org.gnome.Sdk",

    "command": "parlatype",

    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",

    	"--filesystem=home:ro",

        "--talk-name=org.freedesktop.secrets",
        "--talk-name=org.gnome.SettingsDaemon.MediaKeys"
    ],
    "cleanup": [
        "*.la",
        "*.a",
        "/include",
        "/lib/pkgconfig",
        "/share/man",
        "/share/pocketsphinx",
        "/share/sphinxbase"
    ],
    "modules": [
        {
            "name": "sphinxbase",
            "config-opts": [
                "--without-python"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/cmusphinx/sphinxbase.git",
                    "commit": "562d0472aababa9a5fbc5b7518ea174745323e4f"
                }
            ]
        },
        {
            "name": "pocketsphinx",
            "config-opts": [
                "--without-python"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/cmusphinx/pocketsphinx.git",
                    "commit": "3bf4fe66ed7c31e020ffbd340f5fc1646ecd7dfb"
                }
            ]
        },
        {
            "name": "parlatype",
            "buildsystem": "meson",
            "config-opts": [
                "-Dpocketsphinx=true",
		"-Ddeepspeech=true"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/gkarsay/parlatype/releases/download/v3.0/parlatype-3.0.tar.gz",
                    "sha256": "27d9c395d2bbd16544d4604b7c722ac68a67a07c06936dae9f1161a034e26bd4"
                }
            ]
        }
    ]
}
