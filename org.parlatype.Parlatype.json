{
    "app-id": "org.parlatype.Parlatype",

    "runtime": "org.gnome.Platform",
    "runtime-version": "40",
    "sdk": "org.gnome.Sdk",

    "command": "parlatype",

    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",

    	"--filesystem=home:ro",

        "--talk-name=org.freedesktop.secrets",
        "--talk-name=org.gnome.SettingsDaemon.MediaKeys"
    ],
    "cleanup": [
        "*.la",
        "*.a",
        "/include",
        "/lib/pkgconfig",
        "/share/man"
    ],
    "modules": [
        {
            "name": "sphinxbase",
            "config-opts": [
                "--without-python"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/cmusphinx/sphinxbase/archive/9e901850ee4cd1c0b22f2d3b3c15f162564ca283.zip",
                    "sha256": "4369fc4416b2bd3a396ca791cee1ca62c7360f549a78a3c754bb49ba0ebc843a"
                }
            ],
	    "cleanup": [
		"/share/sphinxbase"
            ]
        },
        {
            "name": "pocketsphinx",
            "config-opts": [
                "--without-python"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/cmusphinx/pocketsphinx/archive/ab6d6471800966990e12fdb6ed27ae36323cf2c4.zip",
                    "sha256": "29ce0c81eda60bef919d42287bcf85d29b8dcb8dcb8dc69998f58a79a6e4a5c0"
                }
            ],
	    "cleanup": [
		"/share/pocketsphinx"
            ]
        },
        {
            "name": "parlatype",
            "buildsystem": "meson",
            "config-opts": [
                "-Dpocketsphinx=true",
		"-Ddeepspeech=true"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/gkarsay/parlatype/releases/download/v3.0/parlatype-3.0.tar.gz",
                    "sha256": "27d9c395d2bbd16544d4604b7c722ac68a67a07c06936dae9f1161a034e26bd4"
                }
            ]
        }
    ]
}
